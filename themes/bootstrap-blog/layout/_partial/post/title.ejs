<% if (post.link){ %>
  <h1 itemprop="name">
    <a class="<%= class_name %>" href="<%- url_for(post.link) %>"
       target="_blank" itemprop="url"><%= post.title || '(no title)' %></a>
  </h1>
<% } else { %>
  <% if (index){ %>
    <h1 itemprop="name">
      <a class="<%= class_name %>" href="<%- url_for(post.path) %>"><%= post.title || '(no title)' %></a>
    </h1>
  <% } else { %>
    <h1 class="<%= class_name %>" itemprop="name">
      <%= post.title || '(no title)' %>
    </h1>
    <% if (post.other_lang) { %>
        <a class="btn btn-primary" style="background-color: rgba(0,123,255,0);color: #007bff;margin-top:5px;margin-bottom:10px" href="<%- url_for(post.lang_path) %>">Read <%= post.other_lang.toUpperCase() %> Version</a>
    <% } %>
  <% } %>
<% } %>
